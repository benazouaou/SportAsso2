@{
    Layout = "~/Views/Shared/LayoutUserPannel.cshtml";
}

<!--cette vue est emboitee dans un layout qui contient la barre de navigation de l'espace adherent, lui meme imbrique dans le layout general du site-->

<!--vue sur laquelle l'adherent peut acceder a ses infos personnelles et les modifer-->
<h1>Mes informations personnelles</h1>

<table>
    <tr>
        <td>Nom : &nbsp &nbsp</td>
        <td>@ViewBag.Personne.Nom &nbsp &nbsp</td>
    </tr>
    <tr>
        <td>Prénom : &nbsp &nbsp</td>
        <td>@ViewBag.Personne.Prenom &nbsp &nbsp</td>

    </tr>
    <tr>
        <td>Date de naissance : &nbsp &nbsp</td>
        <td>@ViewBag.Personne.Date_Naissance &nbsp &nbsp</td>
    </tr>
    <tr>
        <td>Email : &nbsp &nbsp</td>
        <td>@ViewBag.Personne.E_mail &nbsp &nbsp</td>
        <td>
            <!--formulaire sans input qui renvoi vers une page pour saisir sa nouvelle adresse mail-->
            <form action="/GestionA/ModifierMail">
                <input type="submit" value="Modifer" />
            </form>
        </td>
    </tr>
    <tr>
        <td>Numéro de téléphone : &nbsp &nbsp</td>
        <td>@ViewBag.Personne.Num_Telephone &nbsp &nbsp</td>
        <td>
            <!--formulaire sans input qui renvoi vers une page pour saisir son nouveau numero de telephone-->
            <form action="/GestionA/ModifierTel">
                <input type="submit" value="Modifer" />
            </form>
        </td>
    </tr>
    <tr>
        <td>Mot de passe : &nbsp &nbsp</td>
        <td>******** &nbsp &nbsp</td>
        <td>
            <!--formulaire sans input qui renvoi vers une page pour saisir son nouveau mot de passe-->
            <form action="/GestionA/ModifierMdp">
                <input type="submit" value="Modifer" />
            </form>
        </td>
    </tr>
</table>